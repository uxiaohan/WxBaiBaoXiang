page {
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  color: #757575;
  background-color: #eee;
  width: 100%;
  height: 100%ï¼›;
}

.image {
  display: flex;
  margin: 20rpx 15rpx 0;
  overflow: hidden;
  justify-content: center;
  align-items: center;
}

.image,
.input {
  width: 720rpx;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 2rpx 2rpx 2rpx rgba(0, 0, 0, .2);
}

.input {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  margin: 20rpx 15rpx;
  border: none;
}

.button,
.input {
  font-size: 30rpx;
}

.button {
  appearance: none;
  box-sizing: border-box;
  width: 720rpx;
  margin-left: 15rpx;
  background-color: #5571cf;
  border-radius: 50rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
}

.button,
.button:after {
  border: none;
}

.button-hover {
  background-color: #000;
  color: #fff;
}

.section {
  box-sizing: border-box;
  width: 720rpx;
  margin: 15rpx 15rpx 0;
  background-color: #fff;
  border: none;
  padding: 15rpx 30rpx;
  box-shadow: 0 1rpx 1rpx rgba(0, 0, 0, .1);
  overflow: hidden;
}

.section:last-child {
  margin-bottom: 20rpx;
}

.section_title {
  box-sizing: border-box;
  font-size: 24rpx;
}

.section_input {
  text-align: center;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  overflow: hidden;
}