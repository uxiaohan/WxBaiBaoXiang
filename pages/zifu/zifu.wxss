.share:nth-child(2n) {
  margin-right: 0;
}

.weui-tab {
  width: 100%;
}

.swiper-tab {
  position: fixed;
  left: 0;
  z-index: 1;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  background: #fff;
}

.swiper-tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  height: 90rpx;
  color: black;
  line-height: 90rpx;
}

.active {
  border-bottom: 2px solid black;
}

swiper {
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
  height: 100vh;
  margin-top: 90rpx;
}

swiper-item {
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.active {
  color: black;
}

.add {
  width: 93%;
  margin-left: 12px;
}

.sharebg {
  position: relative;
  float: left;
  margin-top: 28rpx;
  margin-right: 20rpx;
  padding: 0;
  height: 48rpx;
  line-height: 48rpx;
  width: calc((50% - 22rpx) + (20rpx / 2));
  background-color: #ffa494;
  color: #fff;
  font-size: 24rpx;
  border-radius: 4px;
  border: 1px solid #F8F8F8;
  text-align: center;
}